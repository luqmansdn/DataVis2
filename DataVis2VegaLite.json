{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Health Expenditure - % of GDP",
    "width": 800,
    "height": 450,
    "projection": {
        "type": "equalEarth"
    },
    
    "data": {
        "url": "https://raw.githubusercontent.com/luqmansdn/DataVis2/main/ne_110m.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/luqmansdn/DataVis2/main/DataVis2.csv"
                },
                "key": "Country",
                "fields": [
                    "Health Expenditure - % of GDP"
                ]
            }
        }
    ],
    "mark": {
        "type": "geoshape",
        "stroke": "#141010",
        "strokeWidth": 0.5
    },
    "encoding": {
        "color": {
            "field": "Health Expenditure - % of GDP",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [5,10,15,20],
                "range":  ["#D4AC0D", "#D68910", "#CA6F1E", "#BA4A00"]}
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Health Expenditure - % of GDP",
                "type": "quantitative"
            }
        ]
    },
    "config": {"mark": {"invalid": null}}
}