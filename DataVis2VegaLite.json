{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Hospital Infrastructure",
    "width": 800,
    "height": 450,
    "projection": {
        "type": "equalEarth"
    },
    
    "data": {
        "url": "https://raw.githubusercontent.com/luqmansdn/DataVis2/main/ne_110m.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/luqmansdn/DataVis2/main/Data%20Visualisation%202.csv"
                },
                "key": "Country",
                "fields": [
                    "HospitalDensityper100000people"
                ]
            }
        },
        {
            "calculate": "datum.HospitalDensityper100000people + 0.1",
            "as": "HospitalDensityper100000people"
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "HospitalDensityper100000people",
            "type": "nominal"
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "HospitalDensityper100000people",
                "type": "quantitative"
            }
        ]
    }
}