{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Hospital Density per 100000 people",
  "data": {
    "url": "https://raw.githubusercontent.com/luqmansdn/DataVis2/main/DataVis2.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
      "input": "range",
      "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Hospital Density per 100000 people > 0"},
    {"filter": "datum.Health Expenditure - % of GDP > 0"},
    {"filter": "datum.Population > Population_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Hospital Density Per 100000 People",
      "type": "quantitative",
      "title": "Hospital Density Per 100000 People",
      "axis": {"tickCount": 7},
      "scale": {"type": "log","domain": [1, 70]}
    },
    "y": {
      "field": "Health Expenditure - % of GDP",
      "type": "quantitative",
      "title": "Health Expenditure - % of GDP",
      "axis": {"tickCount": 6},
      "scale": {"type": "log","domain": [1, 30]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Hospital Density Per 100000 People", "type": "quantitative", "format": ","},
          {"field": "Health Expenditure - % of GDP", "type": "quantitative", "format": ","},
          {"field": "Continent", "type": "nominal", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Guinea-Bissau' || datum['Country'] == 'Monaco' || datum['Country'] == 'Nauru' || datum['Country'] == 'Azerbaijan' || datum['Country'] == 'Cyprus'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Hospital Density Per 100000 People", "type": "quantitative", "format": ","},
          {"field": "Health Expenditure - % of GDP", "type": "quantitative", "format": ","},
          {"field": "Continent", "type": "nominal", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}